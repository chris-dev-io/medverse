{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022"],

    "outDir": "lib",
    "rootDir": "src",

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "test"]
}
